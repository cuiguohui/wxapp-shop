image {
  width: 100%;
}

.theme {
  width: 100%;
}

.title {
  width: 100%;
  text-align: center;
  font-size: 16px;
  box-sizing: border-box;
  padding: 10px 0;
  color: #ab956d;
}

.theme-sort image{
  width: 100%;
  height: 350rpx;
}

.theme .theme-sort-small {
  width: 50%;
  float: left;
}

.goods .goods-sort {
  width: 100%;
}

.goods .goods-sort-item {
  display: block;
  width: 325rpx;
  height: 325rpx;
  margin: 0 20rpx 20rpx 0;
  border-radius: 10px;
  text-align: center;
  background: #f5f6f5;
  float: left;
  margin-left: 26rpx;
}

.goods .goods-sort-item image {
  width: 175rpx;
  height: 175rpx;
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%,-50%);
}

.goods .goods-sort-item navigator {
  height: 100%;
  width: 100%;
  display: block;
  position: relative;
}
