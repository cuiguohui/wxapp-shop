/* pages/details/details.wxss */

.main {
  width: 100%;
  height: 100%;
}

.main .good {
  width: 100%;
  height: 460rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 10rpx 0;
  position: relative;
}

.main .good .good-img {
  margin-top: 90rpx;
  width: 310rpx;
  height: 300rpx;
  display: inline-block;
}

.main .good image {
  width: 100%;
  height: 100%;
}

.main .good .good-cart {
  width: 65rpx;
  height: 68rpx;
  position: absolute;
  right: 50rpx;
  top: 60rpx;
}

.main .good .i-badge {
  position: absolute;
}

.main .buy {
  width: 670rpx;
  height: 150rpx;
  line-height: 150rpx;
  background: #ab956d;
  border-radius: 15rpx;
  margin: 0 auto;
  color: #fff;
  font-size: 30rpx;
}

.main .buy>view {
  width: 50%;
  float: left;
}

.main .buy .buy-number button {
  float: left;
  width: 33%;
  background: none;
  color: #fff;
  margin-top: 30rpx;
  font-weight: bold;
  border: none;
}

.main .buy .buy-number text {
  float: left;
  width: 33%;
  text-align: center;
}

.main .buy .buy-cart image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 45rpx;
}

.main .buy .buy-cart {
  position: relative;
}

.main .buy .buy-cart-move {
  width: 20rpx;
  height: 20rpx;
  background: red;
  position: absolute;
  right: 110rpx;
  top: 10rpx;
  border-radius: 50%;
  opacity: 0.6;
  animation: toCart 0.3s ease-out;
}

@keyframes toCart {
  0% {
    right: 110rpx;
    top: 10rpx;
  }

  25% {
    right: 92rpx;
    top: -82rpx;
  }

  50% {
    right: 74rpx;
    top: -175rpx;
  }

  75% {
    right: 56rpx;
    top: -300rpx;
  }

  100% {
    right: 35rpx;
    top: -360rpx;
  }
}

.main .line {
  width: 100%;
  height: 15rpx;
  background: #ccc;
  margin-top: 25rpx;
}

.main .tab {
  width: 100%;
}

.main .tab .tab-bar {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
}

.main .tab .tab-bar>view {
  width: 33%;
  float: left;
  text-align: center;
  font-size: 30rpx;
}

.main .tab .tab-bar>view.on{
  color: #ab956d;
  border-bottom: 1px solid #ab956d;
}

.main .tab .tab-content{
  width: 100%;
  box-sizing: border-box;
  padding: 5rpx 10rpx;
  min-height: 300rpx;
}
